<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showstatsactivity_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/abstract_normal"/>

    <TextView
        android:id="@+id/showstatsactivity_tvCurrentperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:padding="1dp"
        android:text="@string/welcome_person"
        android:textSize="20dp"
        android:textColor="#F4F4F4"/>
    <ProgressBar
        android:id="@+id/showstatsactivity_progressbar"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showstatsactivity_tvCurrentperson"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:id="@+id/showstatsactivity_imageView3"
        android:src="@drawable/rectangle2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:id="@+id/showstatsactivity_tvCurrentprice"
        android:text="@string/current_price"
        android:textSize="22dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showstatsactivity_imageView2"
        android:layout_below="@+id/showstatsactivity_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/rectangle1"/>

    <TextView
        android:id="@+id/showstatsactivity_tvGethash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:text="@string/hash_rate"
        android:background="#F4F4F4"/>

    <TextView
        android:id="@+id/showstatsactivity_tvGettotalbtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="235dp"
        android:layout_toRightOf="@+id/showstatsactivity_tvGethash"
        android:layout_marginLeft="32dp"
        android:padding="5dp"
        android:text="@string/total_btm"
        android:background="#F4F4F4"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showstatsactivity_tvGettotalbtm"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/showstatsactivity_tabGroupcoins"
        android:background="#F4F4F4">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Harold's coins:"
                android:id="@+id/showstatsactivity_tvHaroldcoin"
                android:padding="5dp"
                android:textSize="16dp"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="James' coins:"
                android:id="@+id/showstatsactivity_tvJamescoin"
                android:layout_column="0"
                android:padding="5dp"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Melvin's coins:"
                android:id="@+id/showstatsactiviy_tvMelvincoin"
                android:layout_column="0"
                android:padding="5dp"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nakia's coins:"
                android:id="@+id/showstatsactivity_tvNakiacoin"
                android:layout_column="0"
                android:padding="5dp"
                android:textSize="16dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Caleb's coins:"
                android:id="@+id/showstatsactivity_tvCalebcoin"
                android:layout_column="0"
                android:padding="5dp"
                android:textSize="16dp"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>